---
layout: null
---
[
    {% for post in site.posts limit:10 %}
    {
        "title": {{ post.title | jsonify }},
        "description": {{ post.content | jsonify }},
        "date": {{ post.date | date_to_rfc822 | jsonify }},
        "link": {{ post.url | prepend: site.baseurl | prepend: site.url | jsonify }},
        "categories": [
            {% for category in post.categories %}
                {{ category | jsonify }}{% unless forloop.last %},{% endunless %}
            {% endfor %}
        ],
        "tags": [
            {% for tag in post.tags %}
                {{ tag | jsonify }}{% unless forloop.last %},{% endunless %}
            {% endfor %}
        ]
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
]
